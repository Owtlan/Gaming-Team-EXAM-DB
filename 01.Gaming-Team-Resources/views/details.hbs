{{#with game}}
<main id="details">
    <section id="details-info">
        <div class="game-image">
            <img src="{{image}}">
        </div>

        <div class="game-info">
            <div class="game-text">
                <h1 id="name">{{name}}</h1>
                <h3 id="platform">Platform: {{platform}}</h3>
                <p id="price"><span>Price: ${{price}}</span></p>
                <p id="genre"><span>Genre: {{genre}}</span></p>
                <p id="description">{{description}}</p>
            </div>
            {{#if hasUser}}
            <div class="product-btn">
                <!--Only for registered user and author of the publication -->
                {{#if isAuthor}}
                <div class="author">
                    <a href="/edit/{{_id}}" class="btn-edit">Edit</a>
                    <a href="/delete/{{_id}}" class="btn-delete">Delete</a>
                </div>
                {{else}}
                <!-- Logged in user who has not yet buy this game code-->
                <!-- <a href="#" class="btn-buy">Buy</a> -->

                <!-- Logged in user who has already buy this game code-->
                <!-- <p class="buy-message">You have already bought this game</p> -->
                {{/if}}
            </div>

            {{/if}}
        </div>
    </section>
    <footer>
        <p>Back-End 2022</p>
    </footer>
</main>

{{/with}}